<?xml version="1.0" encoding="utf-8"?>
<resources>

        <color name="sunset_orange">#FF5722</color>
        <color name="primary_700">#E64A19</color>
        <color name="accent_500">#FFC107</color>
        <color name="accent_700">#FFA000</color>

        <color name="white">#FFFFFF</color>
        <color name="text_light">#B0BEC5</color>
        <color name="text_hint">#90A4AE</color>




    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/sunset_orange</item>
        <item name="android:textColor">?attr/dynamicTextColorPrimary</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="NavigationText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/nav_text_color_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>

